<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/noty/jquery.noty.js"></script>
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <link href="~/Scripts/datatables/css/buttons.bootstrap4.css" rel="stylesheet" />
    <link href="~/Scripts/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Scripts/datatables/css/fixedHeader.bootstrap4.css" rel="stylesheet" />
    <link href="~/Scripts/datatables/css/select.bootstrap4.css" rel="stylesheet" />
    <script src="~/Scripts/datatables/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Scripts/datatables/js/data-table.js"></script>
    <script src="~/Scripts/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/noty/layouts/center.js"></script>
    <script src="~/Scripts/noty/themes/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/rowgroup/1.0.4/js/dataTables.rowGroup.min.js"></script>
    <script src="https://cdn.datatables.net/select/1.2.7/js/dataTables.select.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.1.5/js/dataTables.fixedHeader.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.14.0/jquery.validate.min.js"></script>
    <style>
        #load{
            width:100%;
            height:100%;
            margin-top:-5%;
            position:fixed;
            z-index: 9999;
            background:url("/Content/loading.gif") no-repeat center center rgba(255, 255, 255, 255)
        }
    </style>
    <script>
        document.onreadystatechange = function () {
            var state = document.readyState;
            if (state == "interactive") {
                document.getElementById("contents").style.visibility = "hidden";
            } else if (state == 'complete') {
                setTimeout(function () {
                    document.getElementById('interactive');
                    document.getElementById('load').style.visibility = "hidden";
                    document.getElementById('contents').style.visibility = "visible";
                }, 1000);
            }
        }
    </script>
</head>
<body>
    <div id="load"></div>
    <div id="contents">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("CSC Assignment", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li role="presentation" class="dropdown">
                            <a href="#" class="dropdown-toggle" id="drop5" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Tasks <span class="caret"></span> </a>
                            <ul class="dropdown-menu" id="menu2" aria-labelledby="drop5">
                                <li><a class="dropdown-item" href="/tasks/task1">Task 1 - Weather Service</a></li>
                                <li><a class="dropdown-item" href="/tasks/task2">Task 2 - CRUD Application</a></li>
                                <li><a class="dropdown-item" href="/tasks/task3">Task 3 - Authentication and Authorization using Bearer</a></li>
                                <li><a class="dropdown-item" href="/tasks/task4">Task 4 - Talents Search</a></li>
                                <li><a class="dropdown-item" href="/tasks/task5">Task 5 - AWS S3 Photo Storage with Bit.ly</a></li>
                                <li><a class="dropdown-item" href="/stripe/index">Task 6 - Stripe Billing API</a></li>
                                <li><a class="dropdown-item" href="/tasks/task7">Task 7 - Eventbrite API</a></li>
                                <li><a class="dropdown-item" href="/tasks/task8">Task 8 - Clarifai API</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a class="dropdown-item" href="/tasks/extrafeature">Extra Feature</a></li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
